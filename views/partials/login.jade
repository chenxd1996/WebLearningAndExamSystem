div(class="modal show")
    div(class="modal-dialog" vertical-center)
        div(class="modal-content col-xs-8 col-xs-offset-2")
            div(class="modal-header")
                h3(class="text-center text-primary") 请登录
            div(class="modal-body")
                form(class="form center-block" ng-submit="login()" name="Login")
                    div(class="input-group col-xs-10 col-xs-offset-1")
                        span(class="input-group-addon")
                            i(class="fa-user fa fa-fw")
                        input(class="form-control" placeholder="账号" ng-model="user.id" type="text" required)
                    p
                    div(class="input-group col-xs-10 col-xs-offset-1")
                        span(class="input-group-addon")
                            i(class="fa-key fa fa-fw")
                        input(class="form-control" placeholder="密码" ng-model="user.password" type="password" name="password" required)
                    p
                    div(class="col-xs-offset-1")
                        label.checkbox-inline
                            input(type="checkbox" class="checkbox" ng-model="user.auto")
                            span 自动登录
                        a(class="pull-right") 忘记密码?
                    p
                    div(class="input-group col-xs-6 col-xs-offset-3")
                        input(type="submit" class="btn form-control" value="登录" ng-disabled="Login.$invalid" ng-class="{'btn-primary': Login.$valid, 'btn-default': Login.$invalid}")

