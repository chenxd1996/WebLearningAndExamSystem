div(class="panel panel-info")
    div(class="panel-heading")
        h3 添加题目
    div(class="panel-body panelBody")
        div(class="col-xs-8 col-xs-offset-2")
            label 题目描述
            editor(id="container" content="editorText")
            p
            label 题目选项
            input(class="form-control" type="number" min="2" max="26" ng-model="optionsNum" placeholder="题目选项数")
            p
            div(class="input-group mb-5" ng-repeat="option in options")
                span(class="input-group-addon") {{option.op}}
                // input(class="form-control" type="text")
                editor(id="{{'' + $index}}" content="option.description")
            label 题目答案
            input(class="form-control mb-10" type="text" placeholder="如： A, AB, ABC等" ng-model="answer")
            button(class="btn btn-primary pull-right" ng-click="submit()") 确定添加